#include<stdio.h>

void main() {
    int a[20], n, i, j, temp;

    printf("\nEnter the size of the array:");
    scanf("%d", &n);

    printf("\nEnter the array elements:");
    for (i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (a[j] > a[j + 1]) {
                temp = a[j];
                a[j] = a[j + 1];
                a[j + 1] = temp;
            }
        }
    }

    printf("\nSorted array:");
    for (i = 0; i < n; i++) {
        printf("\t%d", a[i]);
    }
}
