# include <stdio.h>
void linear(int a[],int size,int data)
{ int i,flag=0;
for(i=0;i<size;i++)
{
if(a[i]==data)
{ flag=1; break;
}
}
if(flag==0)
{
printf("\nSEARCH DATA NOT FOUND");
} else
{
printf("\nSEARCH DATA FOUND AT THE INDEX %d",i);
}
}
void main()
{
int a[30],size,i,data;
printf("ENTER THE SIZE OF THE ARRAY\t");
scanf("%d",&size); printf("ENTER THE ELEMENTS\n"); for(i=0;i<size;i++)
{
scanf("%d",&a[i]);
}
printf("ENTER THE SEARCH DATA\t");
scanf("%d",&data);
linear(a,size,data);
}
